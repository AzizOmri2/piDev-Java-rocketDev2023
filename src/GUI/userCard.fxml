<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Circle?>

<AnchorPane prefHeight="250.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.UserCardController">
    <VBox prefHeight="250.0" prefWidth="500.0" style="-fx-background-color: #F8F8F8;">
        <HBox prefHeight="75.0" prefWidth="300.0" style="-fx-background-color: #4E4E4E; -fx-alignment: center;">
            <Circle fx:id="profilePicture" radius="25.0" styleClass="profile-picture" fill="#d6d6d6"/>
            <VBox style="-fx-padding: 5px;">
                <Label fx:id="usernameU" style="-fx-text-fill: white; -fx-font-size: 18px;" text="Username" />
                <Label fx:id="emailU" style="-fx-text-fill: white; -fx-font-size: 14px;" text="email@example.com" />
            </VBox>
        </HBox>
        <VBox prefHeight="150.0" prefWidth="300.0" style="-fx-alignment: center;">
            <Label style="-fx-font-size: 18px; -fx-padding: 10px;" text="User Details" />
            <VBox style="-fx-padding: 5px;">
                <HBox style="-fx-spacing: 10px;">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Phone Number:" />
                    <Label fx:id="num_telU" style="-fx-font-size: 14px;" text="Additional Information" />
                </HBox>
                <HBox style="-fx-spacing: 10px;">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Date of Birth:" />
                    <Label fx:id="date_nU" style="-fx-font-size: 14px;" text="Additional Information" />
                </HBox>
            </VBox>
        </VBox>
    </VBox>
</AnchorPane>
